<?xml version="1.0" encoding="UTF-8"?>
        <configuration>

            <springProperty name="name" source="spring.application.name" />

            <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
                <encoder>
                    <pattern>
                        %d{HH:mm:ss.SSS} %-5level %logger{36} %X{X-Request-ID} - %msg%n
                    </pattern>
                </encoder>
            </appender>

            <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
                <!-- (1) -->
                <http>
                    <url>http://a6922f9bf51c.mylabserver.com/loki/api/v1/push</url>
                    <auth>
                        <username>loki</username>
                        <password>0VwaF7EikPrwiOPcYfNc2JARE</password>
                    </auth>
                </http>
                <format>
                    <!-- (2) -->
                    <label>
                        <!--<pattern>app=${name},host=${HOSTNAME},level=%level,client=apache-camel </pattern>-->
                        <pattern>app=poc-loki,host=${HOSTNAME},level=%level,client=apache-camel </pattern>

                        <!-- (3) -->
                        <readMarkers>true</readMarkers>
                    </label>
                    <message>
                        <!-- (4) -->
                        <pattern>
                            {
                            "level":"%level",
                            "class":"%logger{36}",
                            "thread":"%thread",
                            "message": "%message",
                            "requestId": "%X{X-Request-ID}"
                            }
                        </pattern>
                    </message>
                </format>
            </appender>

            <root level="INFO">
                <appender-ref ref="CONSOLE" />
                <appender-ref ref="LOKI" />
            </root>

        </configuration>